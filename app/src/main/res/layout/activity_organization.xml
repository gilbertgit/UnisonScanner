<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorDefaultBg"
                tools:context="com.cphandheld.unisonscanner.OrganizationActivity">

    <include layout="@layout/header"></include>

    <Button
        android:id="@+id/buttonChangeUrl"
        android:layout_width="120dp"
        android:layout_height="36dp"
        android:layout_marginTop="90dp"
        android:padding="5dp"
        android:fontFamily="Lato Regular"
        android:background="@color/colorBinHeader"
        android:textColor="@android:color/white"
        android:text="@string/change_url_button"
        android:textSize="20sp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/textUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_toRightOf="@+id/buttonChangeUrl"
        android:fontFamily="Lato Medium"
        android:textSize="16sp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>

    <ListView
        android:id="@+id/listOrganizations"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:padding="20dp"
        android:divider="@color/colorDefaultBg"
        android:dividerHeight="10dp"
        android:layout_below="@+id/buttonChangeUrl"/>

</RelativeLayout>