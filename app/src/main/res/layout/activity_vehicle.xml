<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorDefaultBg"
                tools:context="com.cphandheld.unisonscanner.VehicleActivity">

    <include layout="@layout/header"></include>

    <TextView
        android:id="@+id/textVIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:gravity="center_horizontal"
        android:text="@string/empty_vin"
        android:fontFamily="Lato Medium"
        android:textColor="@color/colorSubHeaderText"
        android:textSize="24sp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/textYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year: "
        android:fontFamily="Lato Medium"
        android:textColor="@color/colorSubHeaderText"
        android:textSize="22sp"
        android:layout_below="@+id/textVIN"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/textMake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make: "
        android:fontFamily="Lato Medium"
        android:textColor="@color/colorSubHeaderText"
        android:textSize="22sp"
        android:layout_below="@+id/textYear"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/textModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Model: "
        android:fontFamily="Lato Medium"
        android:textColor="@color/colorSubHeaderText"
        android:textSize="22sp"
        android:layout_below="@+id/textMake"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/textColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color: "
        android:fontFamily="Lato Medium"
        android:textColor="@color/colorSubHeaderText"
        android:textSize="22sp"
        android:layout_below="@+id/textModel"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        />

    <EditText
        android:id="@+id/textEditYear"
        android:layout_width="270dp"
        android:layout_height="37dp"
        android:layout_below="@+id/textVIN"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:background="#FFF"
        android:inputType="number"
        android:maxLength="4"
        />
    <EditText
        android:id="@+id/textEditMake"
        android:layout_width="270dp"
        android:layout_height="37dp"
        android:layout_below="@+id/textYear"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:background="#FFF"
        android:inputType="textCapSentences"
        />
    <EditText
        android:id="@+id/textEditModel"
        android:layout_width="270dp"
        android:layout_height="37dp"
        android:layout_below="@+id/textMake"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:background="#FFF"
        android:inputType="textCapSentences"
        />
    <EditText
        android:id="@+id/textEditColor"
        android:layout_width="270dp"
        android:layout_height="37dp"
        android:layout_below="@+id/textModel"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:background="#FFF"
        android:inputType="textCapSentences"
        />

    <Button
        android:id="@+id/buttonSubmitInfo"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="540dp"
        android:padding="5dp"
        android:gravity="center_horizontal"
        android:fontFamily="Lato Regular"
        android:background="@color/colorBinHeader"
        android:textColor="@android:color/white"
        android:text="@string/submit_info_button"
        android:textSize="20sp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>
</RelativeLayout>